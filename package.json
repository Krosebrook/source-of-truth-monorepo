{
  "name": "@flashfusion/stack-sot",
  "version": "1.0.0",
  "description": "FlashFusion Source-of-Truth monorepo - Unified consolidation of 53 repositories",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "agents/*",
    "projects/**/*",
    "shared/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint || true",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "release": "changeset version && pnpm i -r && changeset publish",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "security:audit": "pnpm audit --audit-level=low",
    "security:audit:json": "pnpm audit --json",
    "security:audit:check": "echo 'Running security audit...' && pnpm audit --audit-level=moderate",
    "docs:status": "cat docs/.progress.yaml | grep -A 5 'current' || echo 'Progress tracker not found'",
    "docs:resume": "echo 'ğŸ“– Resume Documentation Work:' && tail -30 docs/SESSION_LOG.md",
    "docs:lint": "markdownlint '**/*.md' --ignore node_modules --ignore '**/node_modules'",
    "docs:validate": "echo 'âœ… Validating documentation...' && test -f .llms.txt && test -f docs/mcp.json && echo 'âœ“ All validation passed'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.2.5",
    "turbo": "^2.1.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
