{
  "name": "mcp-cloud-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready cloud MCP server with observability",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/server.js",
    "dev": "tsx watch src/server.ts",
    "docker:build": "docker build -t mcp-cloud-server:latest .",
    "docker:run": "docker run -p 3000:3000 mcp-cloud-server:latest"
