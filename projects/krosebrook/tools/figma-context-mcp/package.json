{
  "name": "figma-developer-mcp",
  "version": "0.1.13",
  "description": "Model Context Protocol server for Figma integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "figma-developer-mcp": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup --dts",
    "type-check": "tsc --noEmit",
    "start": "node dist/cli.js",
    "start:cli": "cross-env NODE_ENV=cli node dist/cli.js",
    "start:http": "node dist/cli.js",
    "dev": "cross-env NODE_ENV=development tsup --watch",
    "dev:cli": "cross-env NODE_ENV=development tsup --watch -- --stdio",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "inspect": "pnpx @modelcontextprotocol/inspector",
    "prepack": "pnpm build",
    "pub:release": "pnpm build && npm publish"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GLips/Figma-Context-MCP.git"
  },
  "keywords": [
    "figma",
    "mcp",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@figma/rest-api-spec": "^0.24.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/yargs": "^17.0.34",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "remeda": "^2.32.0",
    "yargs": "^17.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
